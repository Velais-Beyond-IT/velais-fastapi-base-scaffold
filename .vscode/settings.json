{
  // ===========================
  // üõ†Ô∏è Editor Settings
  // ===========================
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.tabSize": 4,
  "editor.defaultFormatter": "ms-python.black-formatter",

  // ===========================
  // üêç Python Configuration
  // ===========================
  "black-formatter.args": ["--line-length", "100"],
  "python.envFile": "${workspaceFolder}/.env",
  "python.analysis.typeCheckingMode": "standard",
  "pylint.enabled": true,
  "pylint.args": [
      "--max-line-length=100",
      "--disable=C0115,C0116",           // Disable missing docstring warnings (class, function)
      "--disable=W0511",                 // Disable "TODO" warning
      "--good-names=i,j,k,ex,Run,_,db",  // Allow short variable names for common cases
      "--output-format=colorized"        // Color output in terminal
  ],
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,

  // ===========================
  // üî§ Spell Checker
  // ===========================
  "cSpell.words": [
    "appuser",
    "MYPY",
    "pyproject",
    "pytest"
  ]
}
